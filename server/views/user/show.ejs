<% layout("layouts/boilerplate") -%>

<div class="card mb-4 mt-3">
    <div class="row g-0">
        <div class="col-md-4">
            
                <img src="https://www.pngkey.com/png/detail/52-523516_empty-profile-picture-circle.png" class="img-fluid rounded-circle" alt="username %> Profile Picture" style="height: 350px; width: 100%;">
            
                
                
            
        </div>
        <div class="col-md-8">
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>Name:</strong> <%= user.name %></li>
                <li class="list-group-item"><strong>Email:</strong> <%= user.email %> </li>
                <li class="list-group-item"><strong>Username:</strong> <%= user.username %></li>
                <li class="list-group-item"><strong>Account Type:</strong> <%= user.accountType %></li>
                <li class="list-group-item"><strong>Joined:</strong> <%= user.createdAt.toDateString() %></li>

                <li class="list-group-item">
                    <form action = "/account/edit" method="GET" class="d-inline">
                        <button type="submit" class="btn btn-warning me-2">Edit Profile</button>
                    </form>
                </li>
            </ul>
            
        </div>
    </div>
</div>

    <% if(listings && listings.length>0)  {%>
        <hr class="mt-5">
        <h1 class="text-center mb-3">Listings By: <strong><%=user.name%> <i>(@<%=user.username%>)</i></strong></h1>
        <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 mt-3">
        <% for (let list of listings) { %>
            <a href="/listings/<%=list.id%>" class="listing-link">
                <div class="card col">
                    <img src="<%=list.image%>" class="card-img-top" alt="Image Of <%=list.title%>" style="height: 20rem">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <strong><p class="card-text"><%=list.title%></strong> <br>
                        &#x20B9;<%=list.price.toLocaleString("en-IN")%>
                        </p>
                    </div>
                </div>
            </a>
        <% } %>
    </div>
</div>
    <% } else {%>
        <hr class="mt-5">
        <h1 class="text-center">No Listings</h1>
        <hr>
    <%}%>
   