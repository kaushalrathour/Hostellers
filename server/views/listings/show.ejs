<% layout("layouts/boilerplate") -%>
<div class="card mb-4 mt-3">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="<%= listing.image %>" class="img-fluid rounded" alt="<%= listing.title %> Image">
            <div class="card-overlay">
                
                
            </div>
        </div>
        <div class="col-md-8">
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>Title:</strong><%= listing.title %></li>
                <li class="list-group-item"><strong>Price:</strong> <%= listing.price.toLocaleString("en-IN") %> / month</li>
                <li class="list-group-item"><strong>Description:</strong> <%= listing.description %></li>
                <li class="list-group-item"><strong>For:</strong> <%= listing.forWho %>, <strong>Room Type:</strong> <%= listing.roomType %> </li>
                <li class="list-group-item"><strong>Location:</strong> <%= listing.city %>, <%= listing.state %></li>
                <li class="list-group-item"><strong>Address:</strong> <%= listing.address %></li>

                <!-- <li class="list-group-item"><</li> -->
            </ul>
        </div>
    </div>
</div>


