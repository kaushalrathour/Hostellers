<% layout("layouts/boilerplate.ejs") -%>

<div class="container mt-5">
    <h3 class="text-center mb-3">Unlock the Gateway to Your Universe</h3>

    <form action="/login" method="POST">
        <div class="mb-3">
            <label for="username" class="form-label"><strong>Username</strong></label>
            <input type="text" name="username" class="form-control" id="username" required placeholder="Please Enter Your Username">
        </div>

        <div class="mb-3">
            <label for="password" class="form-label"><strong>Password</strong></label>
            <input type="password" name="password" class="form-control" id="password" required placeholder="Please Enter Your Password">
        </div>

        <button type="submit" class="btn btn-primary mb-3"><strong>Loign</strong></button>
    </form>
</div>
