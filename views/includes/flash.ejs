<% if (success && success.length) { %>
  <!-- Success Alert -->
  <div class="alert alert-success alert-dismissible fade show mt-10 mx-auto" role="alert">
      <strong><%= success %></strong>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<% if (error && error.length) { %>
  <!-- Error Alert -->
  <div class="alert alert-danger alert-dismissible fade show mt-10 mx-auto" role="alert">
      <strong><%= error %></strong>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>
