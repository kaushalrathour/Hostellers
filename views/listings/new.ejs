<% layout("/layouts/boilerplate") -%>
<div class="d-flex justify-content-center">
    <link rel="stylesheet" href="/css/listing.css">
    <div class="wrapper">
        <header class="mb-3">List your hostel</header>
        <form action="/listings" method="POST" onsubmit="return disabledButton()" enctype="multipart/form-data"> 

            <div class="field">
                <label for="title">Title:</label>
                <div class="input-area">
                    <input type="text" name="listing[title]" placeholder="Hostel Name" class="custom-input" id="title" required>
                    <i class="icon fas fa-heading"></i>
                </div>
            </div>

            <div class="field">
                <label for="forWho">For Who:</label>
                <div class="input-area">
                    <select name="listing[forWho]" id="forWho" required class="custom-select">
                        <option value="Boys" selected>Boys</option>
                        <option value="Girls">Girls</option>
                    </select>
                    <i class="icon fas fa-user-friends"></i>
                </div>
            </div>

            <div class="field">
                <label for="location">City:</label>
                <div class="input-area">
                    <input type="text" name="listing[city]" placeholder="Listing City" class="custom-input" id="location" required>
                    <i class="icon fas fa-city"></i>
                </div>
            </div>

            <div class="field">
                <label for="state">State:</label>
                <div class="input-area">
                    <input type="text" name="listing[state]" placeholder="Listing State" class="custom-input" id="state" required>
                    <i class="icon fas fa-map-marked-alt"></i>
                </div>
            </div>

            <div class="field">
                <label for="country">Address:</label>
                <div class="input-area">
                    <input type="text" name="listing[address]" placeholder="Enter the full address" class="custom-input" id="country" required>
                    <i class="icon fas fa-map-marker-alt"></i>
                </div>
            </div>

            <div class="field">
                <label for="nearCollege">Is your hostel near any college? If yes, enter the college name:</label>
                <div class="input-area">
                    <input class="custom-input" type="text" name="listing[nearCollege]" id="nearCollege" placeholder="College Name" value="No" required>
                    <i class="icon fas fa-university"></i>
                </div>
            </div>

            <div class="field">
                <label for="email">Business Email:</label>
                <div class="input-area">
                    <input class="custom-input" type="email" name="listing[contact][email]" id="email" placeholder="Enter your business email" value="<%=currentUser.email%>" required>
                    <i class="icon fas fa-envelope"></i>
                </div>
            </div>

            <div class="field">
                <label for="mobile">Primary Mobile No.:</label>
                <div class="input-area">
                    <input class="custom-input" type="number" name="listing[contact][mobile]" id="mobile" placeholder="Provide primary mobile no. for listing" required>
                    <i class="icon fas fa-mobile-alt"></i>
                </div>
            </div>

            <div class="field">
                <label for="price">Price:</label>
                <div class="input-area">
                    <input type="text" name="listing[price]" placeholder="Set a price" class="custom-input" id="price" required>
                    <i class="icon fas fa-rupee-sign"></i>
                </div>
            </div>

            <div class="field">
                <label for="image">Image:</label>
                <div class="input-area">
                    <input type="file" name="listing[image]" placeholder="Select an image" class="custom-input" id="image" accept=".png, .jpg, .jpeg" size="4194304" required>
                </div>
            </div>

            <div class="field">
                <label for="description">Description:</label>
                <div class="input-area">
                    <input type="text" name="listing[description]" placeholder="Describe your listing" class="custom-input" id="description" required>
                </div>
            </div>

            <div class="field">
                <label for="bedrooms">Number of Bedrooms:</label>
                <div class="input-area">
                <input type="number" name="listing[bedrooms]" placeholder="Total number of bedrooms in hostel" id="bedrooms" class="custom-input" required>
                <i class="icon fas fa-bed"></i>
            </div>
            </div>

            <div class="field">
                <label>Room Types:</label>
                <div class="input-area checkbox-container">
                    <div>
                        <input type="checkbox" name="listing[roomType][Single]" value="Single" id="single">
                        <label for="single">Single Bed</label>
                    </div>
                    <div>
                        <input type="checkbox" name="listing[roomType][Double]" value="Double" id="double">
                        <label for="double">Double Bed</label>
                    </div>
                    <div>
                        <input type="checkbox" name="listing[roomType][Triple]" value="Triple" id="triple">
                        <label for="triple">Triple Bed</label>
                    </div>
                    <div>
                        <input type="checkbox" name="listing[roomType][Dormitory]" value="Dormitory" id="dormitory">
                        <label for="dormitory">Dormitory</label>
                    </div>
                </div>
            </div>

            <div class="field">
                <label>Facilities:</label>
                <div class="input-area checkbox-container">
                    <div>
                        <input type="checkbox" name="listing[facilities][WiFi]" value="WiFi" id="wifi">
                        <label for="wifi">WiFi</label>
                    </div>
                    <div>
                        <input type="checkbox" name="listing[facilities][Parking]" value="Parking" id="parking">
                        <label for="parking">Parking</label>
                    </div>
                    <div>
                        <input type="checkbox" name="listing[facilities][Heating]" value="Heating" id="heating">
                        <label for="heating">Geyser</label>
                    </div>
                    <div>
                        <input type="checkbox" name="listing[facilities][Washroom]" value="Washroom" id="washroom">
                        <label for="washroom">Attached Washroom</label>
                    </div>
                    <div>
                        <input type="checkbox" name="listing[facilities][Kitchen]" value="Kitchen" id="kitchen">
                        <label for="kitchen">Kitchen</label>
                    </div>
                    <div>
                        <input type="checkbox" name="listing[facilities][Gym]" value="Gym" id="gym">
                        <label for="gym">Gym</label>
                    </div>
                    <div>
                        <input type="checkbox" name="listing[facilities][Laundry]" value="Laundry" id="laundry">
                        <label for="laundry">Laundry</label>
                    </div>
                    <div>
                        <input type="checkbox" name="listing[facilities][AC]" value="Air Conditioning" id="airconditioning">
                        <label for="airconditioning">Air Conditioning</label>
                    </div>
                    <div>
                        <input type="checkbox" name="listing[facilities][Mess]" value="Mess" id="mess">
                        <label for="mess">Mess</label>
                    </div>
                    <div>
                        <input type="checkbox" name="listing[facilities][TV]" value="TV" id="tv">
                        <label for="tv">TV</label>
                    </div>
                </div>
            </div>

            <button type="submit" class="custom-submit">Add</button>
        </form>
    </div>
</div>
