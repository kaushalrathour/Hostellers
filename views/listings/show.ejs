<form action="/listings/<%=listing._id%>/review" method="POST">
    <hr>
        <h1>Leave a Review</h1>
        <label for="rating" class="form-label">Rating</label>
        <fieldset class="starability-slot">
          <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
          <input type="radio" id="first-rate1" name="review[rating]" value="1"/>
          <label for="first-rate1" title="Terrible">1 star</label>
          <input type="radio" id="first-rate2" name="review[rating]" value="2" />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input type="radio" id="first-rate3" name="review[rating]" value="3" />
          <label for="first-rate3" title="Average">3 stars</label>
          <input type="radio" id="first-rate4" name="review[rating]" value="4" />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input type="radio" id="first-rate5" name="review[rating]" value="5" />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>

        <label for="comment" class="form-label">Comments</label>
        <br>
        <textarea type="text" name="review[comment]" id="comment" class="form-control rounded" required rows="5"></textarea>
        <br>

        <button class="btn btn-light btn-outline-secondary mb-3">Submit</button>
      </form>

<!-- Reviews Form End -->

 <!-- Reviews Start -->
<% if (listing.reviews.length) { %>
    <hr>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Reviews</h1>

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-sm-2">
            <% for (const review of listing.reviews) { %>
                <div class="col mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title"><%=review.by.name %></h4> <!---- < %= review.reviewer.username % > ---->
                            <div class="starability-result" data-rating="<%= review.rating %>">
                                Rated <%= review.rating %> stars
                            </div>
                            <p class="card-text"><%= review.comment %></p>
                            <form action="/listings/<%=listing._id%>/review/<%=review._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>

    </div>
<% } %>

