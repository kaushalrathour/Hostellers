<% layout("layouts/boilerplate") -%>
<%let facilities = ["WiFi", "Parking", "Gym", "Laundry", "Air Conditioning", "Heating", "Kitchen", "TV", "Mess", "Washroom"]%>
<div class="card mb-4 mt-3">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="<%= listing.image %>" class="img-fluid rounded" alt="<%= listing.title %> Image" style="height: 500px; width: 100%;">
            <!-- <div class="card-overlay"></div> -->
        </div>
        <div class="col-md-8">
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>Listing By:</strong><%= listing.owner.name %> (<i><a href="/<%= listing.owner.username%>">@<%= listing.owner.username%></i></a>)</li>
                <li class="list-group-item"><strong>Title:</strong><%= listing.title %></li>
                <li class="list-group-item"><strong>Price:</strong> <%= listing.price.toLocaleString("en-IN") %> </li>  <!-- /month -->
                <li class="list-group-item"><strong>For:</strong> <%= listing.forWho === "both"? "Both(Girls and Boys)": listing.forWho %>, <strong>Room Type:</strong> <%= listing.roomType %> </li>
                <li class="list-group-item"><strong>Location:</strong> <%= listing.city %>, <%= listing.state %></li>
                <li class="list-group-item"><strong>Address:</strong> <%= listing.address %></li>
                <li class="list-group-item">
                    <strong>Facilities:</strong>
                    
                        <span class="badge bg-secondary"><%= listing.facilities.Gym %></span>
                        <span class="badge bg-secondary"><%= listing.facilities.WiFi %></span>
                        <span class="badge bg-secondary"><%= listing.facilities.Parking %></span>
                        <span class="badge bg-secondary"><%= listing.facilities.Laundry %></span>
                        <span class="badge bg-secondary"><%= listing.facilities.AC %></span>
                        <span class="badge bg-secondary"><%= listing.facilities.Heating %></span>
                        <span class="badge bg-secondary"><%= listing.facilities.Kitchen %></span>
                        <span class="badge bg-secondary"><%= listing.facilities.TV %></span>
                        <span class="badge bg-secondary"><%= listing.facilities.Mess %></span>
                        <span class="badge bg-secondary"><%= listing.facilities.Washroom %></span>
                        
                    
                </li>
                <% if(listing.nearCollege) {%>
                    <li class="list-group-item"><strong>Near of College:</strong> <%= listing.nearCollege %></li>
                <%}%>
                <li class="list-group-item"><strong>Description:</strong> <%= listing.description %></li>
                <li class="list-group-item"><strong>Total Number of Room:</strong> <%= listing.bedrooms %></li>
                
                <!-- Update and Delete Buttons -->
                <%if(currentUser.username == listing.owner.username) {%>
                  <li class="list-group-item">
                    <form action="/listings/<%= listing._id %>/edit" method="GET" class="d-inline">
                        <button type="submit" class="btn btn-warning me-2">Update</button>
                    </form>
                    <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </li>
                <%}%>
                
            </ul>
        </div>
        
    </div>
</div>


<!-- Reviews Form Start -->

<form action="/listings/<%=listing._id%>/review" method="POST">
    <hr>
        <h1>Leave a Review</h1>
        <label for="rating" class="form-label">Rating</label>
        <fieldset class="starability-slot">
          <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
          <input type="radio" id="first-rate1" name="review[rating]" value="1"/>
          <label for="first-rate1" title="Terrible">1 star</label>
          <input type="radio" id="first-rate2" name="review[rating]" value="2" />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input type="radio" id="first-rate3" name="review[rating]" value="3" />
          <label for="first-rate3" title="Average">3 stars</label>
          <input type="radio" id="first-rate4" name="review[rating]" value="4" />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input type="radio" id="first-rate5" name="review[rating]" value="5" />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>

        <label for="comment" class="form-label">Comments</label>
        <br>
        <textarea type="text" name="review[comment]" id="comment" class="form-control rounded" required rows="5"></textarea>
        <br>

        <button class="btn btn-light btn-outline-secondary mb-3">Submit</button>
      </form>

<!-- Reviews Form End -->

 <!-- Reviews Start -->
 <% if (listing.reviews.length) { %>
    <hr>
    <section>
        <div class="container py-5">
          <div class="row d-flex justify-content-center">
            <div class="col-md-10 col-xl-8 text-center">
              <h3 class="fw-bold mb-4">Reviews</h3>
              
            </div>
          </div>
      
          <div class="row text-center">
        <% for (let i = 0; i < listing.reviews.length; i++) { %>
            
                    <div class="col-md-4 mb-4 mb-md-0">
                      <div class="card" style="color: #000; background-color: #f3f2f2;">
                        <div class="card-body py-4 mt-2">
                          <div class="d-flex justify-content-center mb-4">
                            <img src="https://static.thenounproject.com/png/1095867-200.png"
                              class="rounded-circle shadow-1-strong" width="100" height="100" />
                          </div>
                          <h5 class="font-weight-bold"><strong><%= listing.reviews[i].by.name %></strong></h5>
                          <h6 class="font-weight-bold my-3"><%= listing.reviews[i].by.createdAt.toLocaleDateString() %></h6>
                          <ul class="list-unstyled d-flex justify-content-center">
                            <%for(let j= 0; j<listing.reviews[i].rating; j++) {%>
                                <li>
                                    <i class="fas fa-star fa-sm text-info text-warning"></i>
                                </li>
                               <%}%>
                          </ul>
                          <p class="mb-2">
                            <i class="fas fa-quote-left pe-2"></i><%= listing.reviews[i].comment %>
                            <%if(currentUser.username === listing.reviews[i].by.username) {%>
                              <form action="/listings/<%=listing._id%>/review/<%=listing.reviews[i].by._id%>?_method=DELETE" method="POST">
                                <button class="btn">Delete</button>
                              </form>
                            <%}%>
                          </p>
                        </div>
                      </div>
                    </div>
                            
                     
            <% } %>
            </div>
            </section>
        
<% } %>
<!-- Reviews End -->
